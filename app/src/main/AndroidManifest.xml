<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lazyworkout">

    <uses-feature
        android:name="android.hardware.sensor.stepcounter"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" /> <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LazyWorkout">
        <service
            android:name=".service.StepCountingService"
            android:enabled="true"
            android:exported="true"></service>

        <activity android:name=".view.OverviewActivity" />

        <service
            android:name=".pedometer.SensorListener"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".pedometer.SensorListener" />
        <activity android:name=".view.ForgotPasswordActivity" />
        <activity android:name=".view.LockSettingActivity" />
        <activity android:name=".pedometer.ProfileActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>