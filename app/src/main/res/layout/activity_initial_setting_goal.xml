<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TutorialActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/initialgoalNavigation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/initialGoalBackArrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrowback"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/initialGoalSkip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Skip"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/initialGoalView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/initialgoalNavigation">

        <TextView
            android:id="@+id/initialgoalTitle"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:fontFamily="sans-serif-black"
            android:textSize="35dp"
            android:text="Personalize your bio"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/initialGoalDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/initial_goal_describe"
            android:layout_below="@id/initialgoalTitle"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/initialGoalLetgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_below="@id/initialGoalDescribe"
            android:text="@string/initial_goal_letgo"
            android:layout_marginTop="8dp"
            android:textSize="15sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/initialGoalInputField"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/initialGoalLetgo"
            android:layout_marginVertical="40dp"
            android:layout_centerHorizontal="true"
            android:textColorHint="#6E6D6D"
            app:boxBackgroundColor="#C9DCDCDC"
            android:layout_marginTop="10dp"
            android:hint="Goal">

            <AutoCompleteTextView
                android:id="@+id/initialGoalInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:textSize="20dp" />
        </com.google.android.material.textfield.TextInputLayout>



    </RelativeLayout>

    <Button
        android:id="@+id/initialGoalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:text="next >"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>